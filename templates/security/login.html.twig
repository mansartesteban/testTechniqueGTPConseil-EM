{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post" class="d-flex flex-row justify-content-center ">
    <div class="form-group w-50 bg-info mt-5 p-5">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

        <h1 class="h3 mb-3 font-weight-normal text-white">Se connecter</h1>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
        <input type="password" name="password" id="inputPassword" class="form-control mt-3" placeholder="Password" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}">

        <button class="btn btn-lg btn-success mt-5" type="submit">
            Sign in
        </button>
    </div>
</form>
{% endblock %}
