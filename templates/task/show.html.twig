{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}
    <div class="d-flex flex-column align-items-center">

        <h1>Task</h1>

        <table class="table w-50">
            <tbody>
                <tr>
                    <th>Libellé</th>
                    <td>{{ task.label }}</td>
                </tr>
                <tr>
                    <th>Début</th>
                    <td>{{ task.startAt ? task.startAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Fin</th>
                    <td>{{ task.endAt ? task.endAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Accompli</th>
                    <td>
                        <span class="badge {{ task.done ? 'badge-success' : 'badge-danger' }}">
                            {{ task.done ? 'Terminé' : 'En attente' }}
                        </span>
                    </td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('admin_list') }}">back to list</a>

        <a href="{{ path('admin_edit', {'id': task.id}) }}">edit</a>

        {{ include('task/_delete_form.html.twig') }}
    </div>
{% endblock %}
