{% extends 'base.html.twig' %}

{% block title %}Accueil - Gestion tâches - GTP Conseil{% endblock %}

{% block body %}
    <div class="d-flex flex-row justify-content-around mt-5">
        <a href="{{ path("admin_create") }}">
            <div class="d-flex flex-column align-items-center big-link bg-info ">
                <h4>
                    {% if is_granted("ROLE_ADMIN") %}
                        <span class="badge badge-success">
                            Autorisé
                        </span>
                    {% else %}
                        <span class="badge badge-danger">
                            Non autorisé<br/>(Connexion requise : ADMIN)
                        </span>
                    {% endif %}
                </h4>
                <img src="http://lorempixel.com/350/200" alt="image lien 1"/>
                <span>Créer une tâche</span>
            </div>
        </a>
        <a href="{{ path("admin_list") }}">
            <div class="d-flex flex-column align-items-center big-link bg-info">
                <h4>
                    {% if is_granted("ROLE_ADMIN") %}
                        <span class="badge badge-success">
                            Autorisé
                        </span>
                    {% else %}
                        <span class="badge badge-danger">
                            Non autorisé<br/>(Connexion requise : ADMIN)
                        </span>
                    {% endif %}
                </h4>
                <img src="http://lorempixel.com/350/200?2" alt="image lien 1"/>
                <span>Admin panel</span>
            </div>
        </a>
        <a href="{{ path("employee") }}">
            <div class="d-flex flex-column align-items-center big-link bg-info">
                <h4>
                    {% if is_granted("ROLE_EMPLOYEE") %}
                        <span class="badge badge-success">
                            Autorisé
                        </span>
                    {% else %}
                        <span class="badge badge-danger">
                            Non autorisé<br/>(Connexion requise : EMPLOYE)
                        </span>
                    {% endif %}
                </h4>
                <img src="http://lorempixel.com/350/200?1" alt="image lien 1"/>
                <span>Agenda</span>
            </div>
        </a>
    </div>
{% endblock %}
