<header class="p-4 bg-info clearfix">
    <a href="{{ path('home') }}">
        <h1>Test GTP Conseil</h1>
    </a>
    {% if app.user is not null %}
    <div class="dropdown float-right">
        <button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown" id="dropdownMenuButton" aria-haspopup="true" aria-expanded="false">
                <img src="http://lorempixel.com/24/24" class="mr-2"/>
                {{ app.user.email }}
        </button>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="{{ path("logout") }}">Deconnexion</a>
        </div>
    </div>
    {% endif %}
